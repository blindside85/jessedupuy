{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"],
      "@data/*": ["src/data/*"],
      "@images/*": ["src/images/*"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": true,
    "verbatimModuleSyntax": true
  }
}
