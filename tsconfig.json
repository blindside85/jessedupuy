{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
          "@components/*": ["src/components/*"],
          "@layouts/*": ["src/layouts/*"],
          "@styles/*": ["src/styles/*"],
          "@images/*": ["src/images/*"],
        },
        "jsx": "react",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "allowJs": true,
        "verbatimModuleSyntax": true
    }
}
