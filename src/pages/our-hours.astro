---
import BaseLayout from "@layouts/BaseLayout.astro";
import "@styles/cal.css";
---

<script src="../scripts/cal-hours.js"></script>

<BaseLayout title="hours of ours">
    <div class="bday" style="display:none;">
        <label for="bday"><strong>Enter your birthday</strong>:</label>
        <input
            type="date"
            value="2000-01-01"
            min="1924-01-01"
            max="2020-01-01"
        />
    </div>

    <p class="life-math">Eyyy world.</p>

    <canvas width="400" height="400"></canvas>
</BaseLayout>
