---
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<div class="tags">
    {
        tags.map((tag) => (
            <p class="tag">
                <a href={`/tags/${tag}`}>{tag}</a>
            </p>
        ))
    }
</div>

<style>
    .tags {
        display: flex;
        flex-wrap: wrap;
        margin: 0 auto;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #f5f5f5;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
    }
</style>
