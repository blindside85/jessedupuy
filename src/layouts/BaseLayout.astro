---
import BaseHeader from "../components/BaseHeader.astro";
import Footer from "../components/Footer.astro";
import HtmlHead from "../components/HtmlHead.astro";
import "../styles/core.css";

const { title } = Astro.props;
const desc = "Welcome to my personal site where I share insights on cloud engineering, web development, music, fitness, and more. Join me as I explore the intersection of technology and creativity.";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <HtmlHead {title} {desc} />
    </head>
    <body>
        <div class="wrapper">
            <BaseHeader title={title} />
            <main>
                <h1>{title}</h1>

                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>
